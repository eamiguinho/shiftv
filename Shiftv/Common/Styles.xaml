                                        HorizontalAlignment="Right"
                                        IsHitTestVisible="False"
                                        Margin="4"
                                        Padding="{TemplateBinding BorderThickness}"
                                        VerticalAlignment="Top">
                                        <Grid
                                            x:Name="SelectedCheckMark"
                                            Height="40"
                                            Opacity="0"
                                            Width="40">
