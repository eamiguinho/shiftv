                                        Margin="1"
                                        Opacity="0" />
                                    <Rectangle
                                        x:Name="FocusVisual"
                                        IsHitTestVisible="False"
                                        Opacity="0"
                                        Stroke="{StaticResource ListViewItemFocusBorderThemeBrush}"
