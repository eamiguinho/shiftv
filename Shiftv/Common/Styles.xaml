    					VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
    					PointerOverBackgroundMargin="0"
    					ContentMargin="1" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
